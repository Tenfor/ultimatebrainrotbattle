function final(self)
	events.unsubscribe(gameEvents.PLAY_SFX, onPlaySfx, self)
	events.unsubscribe(gameEvents.PLAY_MUSIC, onPlayMusic, self)
	events.unsubscribe(gameEvents.STOP_MUSIC, onStopMusic, self)
