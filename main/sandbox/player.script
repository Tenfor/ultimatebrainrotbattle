local events = require("event.events")
local gameEvents = require("main/events/gameEvents")
local skills = require("main/battle/skills")
local battleController = require "main/battle/battleController"
local playerModel = require("main/battle/playerModel")
local buffs = require("main/battle/buffs")

local function onPlayEffect(self,effectUrl,x, y, rot,scale, flip)
	local xOffset = x or 0
	local yOffset = y or 0
	local rotation = rot and vmath.quat_rotation_z(math.rad(rot)) or vmath.quat()
	local pos = go.get_position("#root")
	pos.x = pos.x + xOffset
	pos.y = pos.y + yOffset
	local scale = scale or 1
	factory.create("#playerEffectFactory", pos, rotation, 
	{animName=hash(effectUrl),xOffset = xOffset, yOffset = yOffset, target=hash("player"), flip=flip}, 
	scale)
end

local function setMode(self,newMode)
	self.mode = newMode
end

local function onSkillTrigger(self, skillId)
	if skillId == skills.LION_STRIKE then 
		setMode(self, skillId)
	end
	if skillId == skills.METEOR_SMASH then 
		setMode(self, skillId)
	end
	if skillId == skills.BERSERK then 
		print("BERSERK")
		battleController.player_berserk(go.get_id())
	end
end

local function attack(self)
	if self.mode == "normal" then
		battleController.player_attack(go.get_id())
	elseif self.mode == skills.LION_STRIKE then
		battleController.player_lion_strike(go.get_id())
		self.mode = "normal"
	elseif self.mode == skills.METEOR_SMASH then
		battleController.player_meteor_smash(go.get_id())
		self.mode = "normal"
	else
		print("PLAYER HAS INVALID MODE",self.mode)
	end
end

function init(self)
	--timer.delay(1, true, attack)
	self.counter = 0
	self.mode = "normal"
	events.subscribe(gameEvents.TRIGGER_SKILL, onSkillTrigger, self)
	events.subscribe(gameEvents.PLAY_EFFECT_ON_PLAYER, onPlayEffect,self)
end

function final(self)
	events.unsubscribe(gameEvents.TRIGGER_SKILL, onSkillTrigger, self)
	events.subscribe(gameEvents.PLAY_EFFECT_ON_PLAYER, onPlayEffect,self)
end

function update(self, dt)
	playerModel.updateBuffs(dt)
	local extra = 1
	if playerModel.hasBuff(buffs.BERSERK) then
		extra = 3 
	end
	self.counter = self.counter + (dt*playerModel.spd) * extra
	if self.counter >= 3 then
		attack(self)
